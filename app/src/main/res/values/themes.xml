<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkText</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->

    </style>


    <!-- BUTTON STYLES -->

    <style name="ClassicButton" >
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- TEXT STYLES-->

    <style name="NormalText">
        <item name="android:textColor">@color/colorBrownText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

</resources>