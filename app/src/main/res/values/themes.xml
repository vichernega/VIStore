<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkBrown</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->

    </style>


    <!-- BUTTON STYLES -->

    <style name="ClassicButton" >
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--ICONS-->

    <style name="IconSmall">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
    </style>


    <!-- TEXT STYLES-->

    <style name="NormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkBrown</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="NormalTextInContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:textColor">@color/colorBrown</item>
        <item name="android:textSize">@dimen/middleSizeText</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="MiddleSizeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/larger_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:textColor">@color/colorBrown</item>
        <item name="android:textSize">@dimen/middleSizeText</item>
        <item name="android:fontFamily">@font/century_gothic</item>

    </style>

    <style name="SmallSizeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/recycler_view_normal_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:textColor">@color/colorLightBrown</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:fontFamily">@font/century_gothic</item>

    </style>

    <style name="SmallEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:textColorHint">@color/colorLightSilver</item>
        <item name="fontFamily">@font/century_gothic</item>
        <item name="android:backgroundTint">@color/colorDarkBrown</item>
        <item name="android:textSize">@dimen/middleSizeText</item>
        <item name="android:textColor">@color/colorDarkBrown</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="HeadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkBrown</item>
        <item name="android:textSize">@dimen/headingText</item>
        <item name="android:fontFamily">@font/century_gothic</item>

    </style>


    <!--RECYCLER VIEW-->

    <style name="HomeRecyclerViewBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkBrown</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_marginTop">@dimen/recycler_view_small_margin</item>
    </style>

    <style name="HomeRecyclerViewSmallLightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLightBrown</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_marginTop">@dimen/recycler_view_small_margin</item>
    </style>



    <!--REGISTER-->

    <style name="RegisterNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/middleSizeText</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="RegisterHeadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:textColorHint">@color/colorLightSilver</item>
        <item name="android:backgroundTint">@color/colorLightSilver</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="fontFamily">@font/century_gothic</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>



    <!--SEPARATOR-->

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/colorLightBrown</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>



</resources>